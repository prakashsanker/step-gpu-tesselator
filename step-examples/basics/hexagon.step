ISO-10303-21;
HEADER;
FILE_DESCRIPTION(('Unit hexagon face example'),'2;1');
FILE_NAME('hexagon_face.stp','20250101',(''),(''),'','ChatGPT','');
FILE_SCHEMA(('CONFIG_CONTROL_DESIGN'));
ENDSEC;
DATA;

/* ==== Geometric context: 3D, plane in XY with Z up ==== */

#1 = CARTESIAN_POINT('', (0.0, 0.0, 0.0));
#2 = DIRECTION('', (0.0, 0.0, 1.0));
#3 = DIRECTION('', (1.0, 0.0, 0.0));
#4 = AXIS2_PLACEMENT_3D('', #1, #2, #3);
#5 = PLANE('', #4);

/* ==== Corner points of a regular hexagon (radius 1, centered at origin in XY) ==== */

#10 = CARTESIAN_POINT('', ( 1.0, 0.0, 0.0)); 
#11 = CARTESIAN_POINT('', ( 0.5, 0.866025403784, 0.0));
#12 = CARTESIAN_POINT('', (-0.5, 0.866025403784, 0.0));
#13 = CARTESIAN_POINT('', (-1.0, 0.0, 0.0));
#14 = CARTESIAN_POINT('', (-0.5, -0.866025403784, 0.0));
#15 = CARTESIAN_POINT('', ( 0.5, -0.866025403784, 0.0));

/* ==== Topological vertices (wrap the points) ==== */

#20 = VERTEX_POINT('', #10); 
#21 = VERTEX_POINT('', #11); 
#22 = VERTEX_POINT('', #12);
#23 = VERTEX_POINT('', #13);
#24 = VERTEX_POINT('', #14);
#25 = VERTEX_POINT('', #15);

/* ==== Directions for edge lines (unit-length along each side) ==== */

#30 = DIRECTION('', (-0.5, 0.866025403784, 0.0));
#31 = DIRECTION('', (-1.0, 0.0, 0.0));
#32 = DIRECTION('', (-0.5, -0.866025403784, 0.0));
#33 = DIRECTION('', ( 0.5, -0.866025403784, 0.0));
#34 = DIRECTION('', ( 1.0, 0.0, 0.0));
#35 = DIRECTION('', ( 0.5, 0.866025403784, 0.0));

/* ==== Geometric curves for edges (unbounded lines) ==== */

#40 = LINE('', #10, #30); 
#41 = LINE('', #11, #31);
#42 = LINE('', #12, #32);
#43 = LINE('', #13, #33);
#44 = LINE('', #14, #34);
#45 = LINE('', #15, #35);

/* ==== Edge_curves: connect two vertices along a curve ==== /
/ EDGE_CURVE(name, vertex_start, vertex_end, edge_geometry, same_sense); */

#50 = EDGE_CURVE('', #20, #21, #40, .T.);
#51 = EDGE_CURVE('', #21, #22, #41, .T.); 
#52 = EDGE_CURVE('', #22, #23, #42, .T.);
#53 = EDGE_CURVE('', #23, #24, #43, .T.);
#54 = EDGE_CURVE('', #24, #25, #44, .T.);
#55 = EDGE_CURVE('', #25, #20, #45, .T.);

/* ==== Oriented edges: specify traversal direction around the face ==== /
/ ORIENTED_EDGE(name, edge_start, edge_end, edge_element, orientation); */

#60 = ORIENTED_EDGE('', *, *, #50, .T.); 
#61 = ORIENTED_EDGE('', *, *, #51, .T.);
#62 = ORIENTED_EDGE('', *, *, #52, .T.);
#63 = ORIENTED_EDGE('', *, *, #53, .T.);
#64 = ORIENTED_EDGE('', *, *, #54, .T.);
#65 = ORIENTED_EDGE('', *, *, #55, .T.);

/* ==== Edge loop: ordered boundary of the face ==== */

#70 = EDGE_LOOP('', (#60, #61, #62, #63, #64, #65));

/* ==== Outer boundary of the face ==== /
/ FACE_OUTER_BOUND(name, bound, orientation); orientation = .T. means "same as surface" */

#80 = FACE_OUTER_BOUND('', #70, .T.);

/* ==== The face itself: advanced_face(surface, bounds) ==== /
/ ADVANCED_FACE(name, bounds, face_geometry, same_sense); */

#90 = ADVANCED_FACE('', (#80), #5, .T.);

ENDSEC;
END-ISO-10303-21;